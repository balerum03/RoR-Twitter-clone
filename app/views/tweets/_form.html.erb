<%= simple_form_for(@tweet) do |f| %>
<%= f.error_notification %>
<div class="fields">
  <div class="control">
    <%= f.input :tweet, label: "Tweet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compse a new Tweet..." %><br/> 
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
